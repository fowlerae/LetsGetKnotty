<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate_yards_required"
        style="@style/SectionTitle"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desired_width_inch"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/calc_desired_width"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/desired_height_inch"/>

            <EditText
                android:id="@+id/calc_desired_height"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/pattern_width_inch"/>

            <EditText
                android:id="@+id/calc_project_width"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
/>

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/pattern_height_inch"/>

            <EditText
                android:id="@+id/calc_project_height"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/yards_per_skein"/>


            <EditText
                android:id="@+id/calc_yarns_per_skein"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/yards_used"/>

            <EditText
                android:id="@+id/calc_yards_used"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </LinearLayout>



    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"/>


</LinearLayout>